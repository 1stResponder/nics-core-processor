<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" >
		<property name="searchSystemEnvironment" value="true" />
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />
		<property name="location">
			<value>${NICS_CONFIG}/email-consumer.properties</value>
		</property>
	</bean>
	
	<bean id="log4jInitialization" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
		<property name="targetMethod" value="initLogging" />
		<property name="arguments">
			<list>
				<value>config/log4j.properties</value>
			</list>
		</property>
	</bean>

	<!-- Property file for EmailConsumerSpring bean -->
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"> 
		<property name="location">
			<value>config/email-consumer.properties</value>
		</property>
	</bean>
	
	<!-- EmailConsumerSpring bean configuration --> 
	<bean id="emailConsumer" class="edu.mit.ll.nics.processor.email.EmailConsumerSpring"
		init-method="init">
		<property name="transportProtocol" value="${mail.transport.protocol}" />
		<property name="smtpHost" value="${mail.smtp.host}" />
		<property name="smtpPort" value="${mail.smtp.port}" />
		<property name="mailUsername" value="${mail.username}" />
		<property name="mailPassword" value="${mail.password}" />
		<property name="log4jPropertyFile" value="${log4jPropertyFile}" />
	</bean>	

	<!-- Main camel context -->
	<camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
		<!-- Placeholder for a properties file	-->
		<propertyPlaceholder id="props" location="file:config/email-consumer.properties" />

		<!-- A Camel route -->
		<route id="emailConsumerRoute">
			<from uri="{{srcUrl}}" />
			
     		<!-- MACH filtering -->
            <when>
                    <simple>${bodyAs(String)} contains 'HEARTBEAT' and ${bodyAs(String)} contains '${properties:nodeAndName}'</simple>
                    <transform>
                    	<simple>${properties:nodeAndName}</simple>
                    </transform>
                    <to uri="{{mach}}" />
                    <stop/>
            </when>
			<!-- END MACH filtering -->
			
			<process ref="emailConsumer" />
			
			<!-- For debugging
			<to uri="stream:out" /> -->
			 
		</route>
				
	</camelContext>

</beans>
